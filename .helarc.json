{
  "presets": "./index.js",
  "tasks": {
    "format": "prettier ./index.js ./test.js ./config/**/*.js --write",
    "lint": "eslint ./index.js ./test.js ./config/**/*.js -f codeframe --fix",
    "build": "hela style",
    "test": [
      "hela style",
      "nyc --reporter=lcov node test.js",
      "nyc report",
      "nyc check-coverage"
    ],
    "release": [
      "semantic-release pre",
      "npm publish",
      "semantic-release post"
    ]
  }
}
